# Используйте официальное базовое изображение Go
FROM golang:1.23-alpine

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Скопируйте go.mod и go.sum для установки зависимостей
COPY go.mod go.sum ./

# Установите зависимости
RUN go mod download

# Скопируйте исходный код приложения в контейнер
COPY . .

# Соберите приложение
RUN go build -o main ./cmd

# Установите переменные окружения, если необходимо
# ENV PORT=8080

# Определите команду для запуска приложения
CMD ["./main"]
